---
import Layout from '../layouts/Layout.astro';
import Button from '../components/Button.astro';
import Phone from '../components/Phone.astro';

const backgroundUrl =
  'https://images.unsplash.com/photo-1571902943202-507ec2618e8f?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1550&q=80';

// 1. size the text properly
---

<Layout title='Gymlink - Link up with like-minded fitness enthusiasts.'>
  <main
    class={`bg-dark-500 min-h-screen bg-[url("/Gymlink-bg.jpg")] xl:pt-32 relative bg-cover bg-center`}
  >
    <div
      class='inset-0 bg-gradient-to-t from-dark-500 to-transparent z-30 absolute'
    >
    </div>
    <section
      class='flex flex-col gap-5 pt-32 md:pt-48 px-4 lg:px-48 z-50 tracking-wider'
    >
      <div class='flex flex-col md:flex-row relative'>
        <div class='z-40 flex flex-col items-center md:items-start gap-5'>
          <h1
            class='text-light-500 items-center text-center md:text-left md:items-start text-5xl md:text-7xl font-bold brightness-200 md:w-3/4'
          >
            Link up with like-minded fitness enthusiasts.
          </h1>
          <h3
            class='text-light-400 text-xl items-center text-center md:items-start'
          >
            A social platform to find dates, friends and gym buddies.
          </h3>
          <Button
            text='Download'
            url='https://testflight.apple.com/join/NTM6DRrW'
          />
        </div>
        <div
          class='w-72 flex md:hidden md:w-[30rem] mt-20 md:mt-0 mx-auto md:mx-0 z-50'
        >
          <img src='/mockup1.png' alt='mockup' class='w-full object-cover' />
        </div>
        <Phone />
      </div>
    </section>
  </main>
</Layout>
